<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

   tools:context=".MainActivity"
    android:scaleType="centerCrop">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/flavrlogo"
            android:layout_centerHorizontal="true"
            android:id="@+id/logo"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/logo"
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:textSize="40dp"
                android:text="Get Food"
                android:onClick="getFood"
                android:id="@+id/get_food"
                android:background="@drawable/roundedbuttonblue"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:textSize="40dp"
                android:text="Give Food"
                android:id="@+id/give_food"
                android:onClick="giveFood"
                android:background="@drawable/roundedbuttongreen"
                android:layout_marginTop="20dp"
                android:layout_alignBottom="@+id/getFood"
                android:layout_alignRight="@+id/Title"
                android:layout_alignEnd="@+id/Title"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>


</RelativeLayout>
