    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cs147.flavr.createEvent">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/event_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Event Title"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/food_available"
            android:layout_below="@id/event_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Food Type"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:id="@+id/description"
            android:layout_below="@id/food_available"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Optional Description"/>


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/location"
            android:layout_centerVertical="true"
            android:layout_below="@id/description"
            android:hint="Please enter the location of your event."/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:text="End Time: "
                android:id="@+id/end_time"
                android:layout_gravity="left"
                android:layout_marginTop="50dp" />
            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/end_time"
                android:id="@+id/timePicker"
                android:scaleX=".75"
                android:scaleY=".75"/>
        </RelativeLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/roundedbutton"
            android:text="Submit Event"
            android:id="@+id/submit"
            android:textSize="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="submitEvent"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/roundedbutton"
            android:textSize="16dp"
            android:text="Add more information..."
            android:id="@+id/moreinfo"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/linearLayout"
            android:layout_alignEnd="@+id/linearLayout"
            android:onClick="addInfo"/>

    </RelativeLayout>
