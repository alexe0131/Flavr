<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:textSize="12dp"
            android:text="&#8226; Required"
            android:layout_gravity="right"
            android:id="@+id/required"/>
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="&#8226;Food description: "
                android:textStyle="bold"
                android:id="@+id/food_type_label"></TextView>
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:id="@+id/food_type"
                android:layout_weight="1"
                android:hint="Enter Food Type here"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="&#8226; Event Title: "
                android:textStyle="bold"
                android:id="@+id/event_title_label"></TextView>
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/event_title"
                android:layout_weight="1"
                android:hint="Enter Event Title here"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Description: "
                android:textStyle="bold"
                android:id="@+id/description_label"></TextView>
            <EditText
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:id="@+id/description"
                android:hint="Enter Event Description"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="&#8226; Location: "
                android:textStyle="bold"
                android:id="@+id/location_label"></TextView>
            <EditText
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:id="@+id/location"
                android:hint="Enter the address of your event here"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="&#8226; End Time: "
                android:textStyle="bold"
                android:id="@+id/end_time_label"
                android:layout_marginTop="75dp">
            </TextView>
            <TimePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/end_time"
                android:scaleX=".75"
                android:scaleY=".75"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Categories: "
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:id="@+id/category_label"/>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/roundedbuttonblue"
                android:text="Select"
                android:id="@+id/pick_categories"
                android:textSize="15dp"
                android:onClick="pickCategories"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="128dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:text="Dietary Accommodations: "
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/diet_label"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/roundedbuttonblue"
                android:text="Select"
                android:id="@+id/dietary_accomodations"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                android:onClick="dietaryAccomodations"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"/>
</LinearLayout>
        <LinearLayout
            android:id="@+id/row8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Capacity: "
                android:textStyle="bold"
                android:id="@+id/capacity_label"></TextView>
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/capacity"
                android:hint="Maximum number of attendees: "
                android:inputType="number"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dip"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="16dp"
                android:text="Image: "
                android:textStyle="bold"
                android:id="@+id/image_label"></TextView>
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:background="@drawable/roundedbuttonwhite"
                android:text="Upload an Image"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:onClick="uploadImage"
                android:id="@+id/uploadimage"/>

        </LinearLayout>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/roundedbuttongreen"
            android:text="Submit Event"
            android:id="@+id/submit"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:onClick="submitEvent"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"/>
    </LinearLayout>
</ScrollView>
