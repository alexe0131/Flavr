<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cs147.flavr.createEvent">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/event_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Event Title"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/food_available"
        android:layout_below="@id/event_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Food Available"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/location"
        android:layout_below="@id/food_available"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Location"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/available_until"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Available until:"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/keywords"
        android:layout_below="@+id/available_until"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Keywords"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Submit Event"
        android:id="@+id/SubmitEvent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@drawable/roundedbutton"
        android:onClick="submitEvent"/>



</RelativeLayout>
